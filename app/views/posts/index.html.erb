
<div class="container-fluid gedf-wrapper mt-0">
    <div class="row">
        <div class="col-md-3">
        
        </div>
        <div class="col-md-6 ">
            <div class="mb-6">
            <%= render 'posts/new' %>
            </div>
            <div class="padder mb-6 mt-6"></div>
            <div class="mb-6">
            <%= render 'posts/show' %>
            </div>
        </div>
        <div class="col-md-3">
            <div class="d-flex justify-content-between align-items-center">
         
          

         
                    <div class="card gedf-card">
                        <div class="card-body ">
                            <h5 class="card-title"> Friends       (<%= current_user.friends.count %>)</h5>
                            
                            <% current_user.friends.each do | friend | %>
                                 <hr>
                                <div class="space-it">
                                    <%= gravatar_for friend, size: 40 %>
                                    <span class="card-subtitle mb-2 text-muted left-shift"><%= link_to friend.full_name, user_path(friend) %></span>
                                </div>
               
                            <% end %>
                        </div>
                    </div>
                

        </div>
    </div>
</div>